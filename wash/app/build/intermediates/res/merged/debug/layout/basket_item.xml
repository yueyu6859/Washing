<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_160PX"
    android:minHeight="@dimen/DIMEN_160PX"
    android:paddingTop="@dimen/DIMEN_12PX"
    android:paddingBottom="@dimen/DIMEN_12PX"
    android:background="@color/white"
    android:orientation="horizontal" >

    <com.android.volley.toolbox.NetworkImageView 
        android:id="@+id/xiyilan_image"
        android:layout_width="@dimen/DIMEN_110PX"
        android:layout_height="@dimen/DIMEN_110PX"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/DIMEN_58PX"
       android:src="@drawable/jianxide" 
        
        />
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="0dp"
        android:layout_marginRight="@dimen/DIMEN_20PX"
        android:layout_weight="1">
        <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_12PX"
        android:textColor="@color/zi_er"
        android:textSize="16sp"
        android:text="T衣" />
        <ImageButton
            android:id="@+id/del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
        android:background="@drawable/baske_delete" />
    </RelativeLayout>
    
    
     <RelativeLayout 
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1">
        <LinearLayout 
            android:id="@+id/ll_number"
            android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/DIMEN_70PX"
     android:gravity="center_vertical"
       android:orientation="horizontal">
       <ImageButton
           android:id="@+id/msubbtn"
           android:layout_width="@dimen/DIMEN_67PX"
           android:layout_height="@dimen/DIMEN_56PX"
           android:background="@drawable/selector_basket_jian"/>
       <TextView
           android:id="@+id/number"
           android:layout_width="@dimen/DIMEN_67PX"
           android:layout_height="@dimen/DIMEN_56PX"
           android:text="1"
           android:gravity="center_horizontal|center_vertical"
           android:numeric="integer"
           android:clickable="false"
           android:textColor="@color/money"
           android:background="@drawable/baske_edit"/>
       <ImageButton 
           android:id="@+id/maddbtn"
           android:layout_width="@dimen/DIMEN_67PX"
           android:layout_height="@dimen/DIMEN_56PX"
           android:layout_gravity="center_vertical"
           android:background="@drawable/selector_basket_jia"/>
       </LinearLayout>
       <LinearLayout 
           android:layout_toRightOf="@id/ll_number"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal">
       <TextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="5dp"
       android:text="x"
       android:textSize="16sp"
       android:textColor="@color/zi_yi"
   />
       <TextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="¥"
       android:textSize="20sp"
       android:textColor="@color/money"
      />
       <TextView
       android:id="@+id/money"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="20sp"
       android:textColor="@color/money"
       android:text="18" />
       </LinearLayout>
       </RelativeLayout>
   
</LinearLayout>

</LinearLayout>