<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JianXiMain" 
    android:background="@android:color/white"
    android:orientation="vertical">
  <RelativeLayout 
      android:layout_width="match_parent"
      android:layout_height="@dimen/DIMEN_98PX"
      android:orientation="horizontal">
    <ImageButton 
        android:id="@+id/retun1"
      android:layout_width="@dimen/DIMEN_120PX"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@drawable/rentun"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="center_vertical"
          android:layout_centerHorizontal="true"
          android:textColor="@color/zi_yi"
          android:text="件洗"
          android:textSize="20sp" />

    

  </RelativeLayout>
  <View 
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/line"/>
     <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_90PX" >

        <TextView
            android:id="@+id/tab_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/line" />

        <TextView
            android:id="@+id/tab_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp" />

        <View
            android:layout_width="@dimen/DIMEN_3PX"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/line" />

        <TextView
            android:id="@+id/tab_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp" />
        <View
            android:layout_width="@dimen/DIMEN_3PX"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/line" />
         <TextView
            android:id="@+id/tab_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_9PX"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/cursor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/main_color" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/main_color"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/main_color"
            android:visibility="invisible" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
           android:background="@color/main_color"
            android:visibility="invisible" />
    </LinearLayout>
   

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />
    
   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1.0"
          android:layout_height="0dp"
        >
    <android.support.v4.view.ViewPager
        android:id="@+id/jianxipager"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/background"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" 
        />
    <ImageButton
      android:id="@+id/btn_fbasekt"
      android:layout_width="@dimen/DIMEN_113PX"
      android:layout_height="@dimen/DIMEN_113PX"
     android:layout_marginLeft="@dimen/DIMEN_16PX"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="@dimen/DIMEN_184PX"
      android:background="@drawable/folat_basket_sel"
    />
    </RelativeLayout>
   
</LinearLayout>
