<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
      android:padding="10dp"
      android:background="@drawable/corners"
      android:gravity="center"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/dialog_loading_img"
        android:layout_width="@dimen/DIMEN_113PX"
        android:layout_height="@dimen/DIMEN_113PX"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/DIMEN_57PX"
        android:scaleType="fitXY"
        android:src="@drawable/loading" />
  <TextView
        android:id="@+id/dialog_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/DIMEN_12PX"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
</LinearLayout>
