<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 首页字体颜色选择器 -->
  <!-- Non focused states -->
	<item android:state_focused="false" android:state_selected="false" android:state_pressed="false" android:color="#bcbdc3" />
	<item android:state_focused="false" android:state_selected="true" android:state_pressed="false" android:color="#28ccfc" />
	<!-- Focused states -->
	<item android:state_focused="true" android:state_selected="false" android:state_pressed="false" android:color="#28ccfc" />
	<item android:state_focused="true" android:state_selected="true" android:state_pressed="false" android:color="#28ccfc" />
	<!-- Pressed -->
	<item android:state_selected="true" android:state_pressed="true" android:color="#28ccfc" />
	<item android:state_pressed="true" android:color="#28ccfc" />	
</selector>
