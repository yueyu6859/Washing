<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_98PX"
        android:background="@color/white" >

    <ImageButton
        android:id="@+id/return14"
        android:layout_width="@dimen/DIMEN_120PX"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@drawable/rentun" />

    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关于浣客洗衣"
        android:textColor="@color/zi_yi"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        />
   
</RelativeLayout>

  <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>
    <LinearLayout
       android:layout_width="match_parent"
       style="@style/location_height"
       android:orientation="horizontal"
       android:background="@color/white"
       android:gravity="center_vertical">
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/zi_er"
           android:textSize="16sp"
           android:text="微信：浣客洗衣"
           android:layout_marginLeft="20dp"/>
   </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>
    
    
    <LinearLayout
       android:layout_width="match_parent"
       style="@style/location_height"
       android:orientation="horizontal"
       android:background="@color/white"
       android:gravity="center_vertical">
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/zi_er"
           android:textSize="16sp"
           android:text="官网:"
           android:layout_marginLeft="20dp"/>
       <Button
           android:layout_marginLeft="5dp"
           android:id="@+id/official"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="16sp"
           android:text="www.huankxy.com"
           android:textColor="@color/main_color"
           android:background="@null"
           />
   </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>
    
   
</LinearLayout>
