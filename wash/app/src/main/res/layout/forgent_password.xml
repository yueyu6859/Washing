<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_113PX"
    android:background="@android:color/white"
    >
    <ImageButton 
        android:id="@+id/return29"
       android:layout_width="@dimen/DIMEN_120PX"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@drawable/rentun"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:textColor="@color/zi_yi"
        android:textSize="20sp"
        android:layout_centerInParent="true"/>
    
</RelativeLayout>
  <View 
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="@color/line"/>
  <LinearLayout
       android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:orientation="vertical">
    <TextView 
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="填写密码保护问题"
        android:textColor="@color/zi_er"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        />
    <LinearLayout  
        android:layout_width="match_parent"
        style="@style/location_height"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/DIMEN_90PX"
        android:layout_marginRight="33dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
         <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/zi_yi"/>
        <Spinner 
            android:layout_marginLeft="5dp"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            style="@style/location_height"
            android:textSize="16sp"
            android:background="@drawable/drop"
            android:id="@+id/prsz"
            />
    </LinearLayout>
    <LinearLayout  
        android:layout_width="match_parent"
        style="@style/location_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/DIMEN_90PX"
        android:layout_marginRight="33dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="答案"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="@color/zi_yi"/>
        <EditText 
            android:id="@+id/ed1"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:background="@drawable/kuangs"
            android:hint="请输入答案"
            />
    </LinearLayout>
       <EditText 
           android:id="@+id/PS1"
           android:paddingLeft="6dp"
           android:layout_width="match_parent"
           android:layout_marginRight="26dp"
           android:layout_marginLeft="15dp"
          android:drawableLeft="@drawable/lock"
          style="@style/location_height"
          android:textSize="16sp"
          android:gravity="center_vertical"
          android:maxLength="6"
            android:password="true"
            android:drawablePadding="7dp"
               android:inputType="number"
          android:hint="请输入新密码"
          android:background="@drawable/kuangs"/>
       <EditText 
           android:id="@+id/PS2"
           android:layout_marginTop="15dp"
           android:paddingLeft="6dp"
             android:password="true"
           android:layout_width="match_parent"
           android:layout_marginRight="26dp"
           android:layout_marginLeft="15dp"
          android:drawableLeft="@drawable/lock"
          style="@style/location_height"
          android:maxLength="6"
               android:inputType="number"
          android:textSize="16sp"
          android:gravity="center_vertical"
          android:hint="请再次输入新密码"
          android:drawablePadding="7dp"
          android:layout_marginBottom="15dp"
          android:background="@drawable/kuangs"/>
    </LinearLayout>
    <Button 
        android:id="@+id/sure"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
           android:layout_marginRight="26dp"
           android:layout_marginLeft="15dp"
           style="@style/location_height"
           android:text="保存"
           android:textColor="@color/white"
           android:background="@drawable/aipaly_recharge"
        />
</LinearLayout>
