<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" 
    android:orientation="vertical"
    android:background="@color/background">
     <RelativeLayout
         android:layout_width="match_parent"
          android:layout_height="@dimen/DIMEN_98PX"
         android:background="@android:color/white">
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="绑定手机登陆"
             android:textSize="20sp"
              android:layout_centerInParent="true"
              android:textColor="@color/zi_yi"
         />

         <ImageButton
             android:id="@+id/ib_return"
            android:layout_width="@dimen/DIMEN_120PX"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@drawable/rentun" />

     </RelativeLayout>

     
      <RelativeLayout
          android:layout_marginLeft="@dimen/DIMEN_40PX"
        android:layout_marginRight="@dimen/DIMEN_40PX"
          android:layout_width="match_parent"
          android:layout_height="@dimen/DIMEN_90PX"
          android:orientation="horizontal"
          android:layout_marginTop="@dimen/DIMEN_23PX"
          android:layout_gravity="center_horizontal"
        
          >

          <EditText
              android:id="@+id/ed_phonenumer"
              style="@style/location_height"
              android:layout_width="@dimen/DIMEN_360PX"
               android:layout_weight="1"
              android:background="@android:color/white"
              android:gravity="center_vertical"
              android:hint="请输入手机号码"
              android:textSize="14sp"
              android:numeric="integer"
              android:paddingLeft="@dimen/DIMEN_12PX"
              android:phoneNumber="true" />
  <!--  android:background="@drawable/selector_note" -->
          <Button
              android:layout_alignParentRight="true"
              android:id="@+id/btn_jieshou"
              style="@style/location_height"
              android:layout_width="@dimen/DIMEN_190PX"
              android:layout_marginRight="@dimen/DIMEN_1PX"
              android:layout_marginLeft="@dimen/DIMEN_12PX"
              android:background="@color/main_color"
              android:text="获取验证码"
              android:textColor="@color/white"
              android:textSize="14sp" />

      </RelativeLayout>
     <EditText
         android:id="@+id/et_yanzhengma"
         android:layout_marginTop="@dimen/DIMEN_45PX"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/DIMEN_40PX"
        android:layout_marginRight="@dimen/DIMEN_40PX"
         style="@style/location_height"
         android:phoneNumber="true"
         android:layout_gravity="center_horizontal"
         android:background="@android:color/white"
         android:hint="请输入验证码"
         android:textSize="14sp"
            android:paddingLeft="@dimen/DIMEN_12PX"
         />

     <Button
         android:id="@+id/btn_bound"
         android:layout_width="match_parent"
         android:layout_marginLeft="@dimen/DIMEN_40PX"
        android:layout_marginRight="@dimen/DIMEN_40PX"
         style="@style/location_height"
         android:layout_marginTop="@dimen/DIMEN_113PX"
         android:background="@drawable/aipaly_recharge"
         android:layout_gravity="center_horizontal"
         android:text="绑定手机登陆"
         android:textColor="@android:color/white" />

   <LinearLayout 
       android:layout_marginTop="@dimen/DIMEN_23PX"
         android:layout_width="@dimen/DIMEN_630PX"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:gravity="center_horizontal"
       >
     <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="点击“绑定手机登陆”即表示同意"
        />
     <Button 
         android:id="@+id/xieyi"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:background="@null"
         android:textSize="12sp"
         android:textColor="#00cccc"
         android:text="《浣客洗衣用户协议》"/>
     </LinearLayout>
</LinearLayout>