<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >
    <RelativeLayout 
        android:id="@+id/title"
        android:layout_width="match_parent"
     android:layout_height="@dimen/DIMEN_98PX"
        android:background="#ffffff">
         <ImageButton 
         android:id="@+id/return11"
       android:layout_width="@dimen/DIMEN_120PX"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@drawable/rentun"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pay"
        android:textColor="@color/zi_yi"
        android:textSize="20sp"
        android:layout_centerInParent="true"/>

    </RelativeLayout>
    
    
   <LinearLayout 
       android:layout_width="match_parent"
       style="@style/location_height"
       android:orientation="horizontal"
       android:layout_marginTop="@dimen/DIMEN_23PX"
       android:background="@android:color/white">
       <TextView
            android:id="@+id/mtab_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/DIMEN_38PX" />
        <TextView
            android:id="@+id/mtab_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/DIMEN_38PX" />
       </LinearLayout>
       <android.support.v4.view.ViewPager
        android:id="@+id/paymentpager"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:background="#cccccc"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" 
        />
</LinearLayout>
