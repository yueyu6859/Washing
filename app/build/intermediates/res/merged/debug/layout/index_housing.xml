<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <!-- title -->

    <RelativeLayout
        android:layout_width="match_parent"
         android:layout_height="@dimen/DIMEN_98PX"
        android:background="@android:color/white" >

        <ImageButton
            android:id="@+id/return16"
            android:layout_width="@dimen/DIMEN_120PX"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@drawable/rentun"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/index1"
            android:textColor="@color/zi_yi"
            android:textSize="20sp" />
    </RelativeLayout>

    <!-- 索引框 -->
  
    <RelativeLayout 
        android:layout_width="@dimen/DIMEN_675PX"
        android:layout_height="@dimen/DIMEN_68PX"
        android:layout_margin="@dimen/DIMEN_23PX"
        android:background="@drawable/shape">
        <EditText 
            android:id="@+id/index_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:drawableLeft="@drawable/index"
            android:paddingLeft="@dimen/DIMEN_12PX"
            android:hint="@string/index2"
            android:textSize="14sp"/>
        
    </RelativeLayout>

   

    <!--  <AutoCompleteTextView
        android:id="@+id/act"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:background="@drawable/search"
        android:drawableLeft="@drawable/index"
        android:hint="输入您的小区"
        android:paddingLeft="8dp" />-->
        

    <ListView
        android:id="@+id/index_list"
        android:layout_width="match_parent"
        android:dividerHeight="0.3dp"
        android:divider="@color/line"
        android:layout_height="match_parent" 
        />

</LinearLayout>