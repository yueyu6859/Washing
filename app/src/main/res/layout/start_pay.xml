    </LinearLayout>
    <View android:layout_width="@dimen/DIMEN_540PX"
        android:layout_height="@dimen/DIMEN_3PX"
        android:layout_gravity="center_horizontal"
        android:background="@color/line"/>
    
    
    
    <TextView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/zi_er"
    android:layout_marginTop="@dimen/DIMEN_40PX"
    android:layout_marginLeft="@dimen/DIMEN_45PX"
    android:text="密码保护问题"/>
    
    
    <LinearLayout  
        android:layout_width="@dimen/DIMEN_540PX"
        style="@style/location_height"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/zi_yi"/>
        <Spinner 
            android:layout_marginLeft="5dp"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            style="@style/location_height"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:background="@drawable/drop"
             android:saveEnabled="true" 
            android:id="@+id/pr"
            />
    </LinearLayout>
    
    
    
    <LinearLayout  
        android:layout_width="@dimen/DIMEN_540PX"
        style="@style/location_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="答案"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/zi_yi"/>
        <EditText 
            android:id="@+id/answer"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:textColor="@color/zi_er"
            android:background="@drawable/kuangs"
            android:hint="请输入答案"
            />
    </LinearLayout>
    </LinearLayout>
    


<Button 
    android:id="@+id/btn_pay_verify"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            style="@style/location_height"
            android:text="确定"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:background="@color/main_color"/>
</LinearLayout>
