<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:layout_margin="@dimen/DIMEN_34PX">
    
    
     <LinearLayout 
      
        android:layout_marginLeft="@dimen/DIMEN_25PX"
        android:layout_marginRight="@dimen/DIMEN_25PX"
        android:layout_marginTop="@dimen/DIMEN_45PX"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_320PX"
        android:background="@drawable/order_image"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        
        <!-- 订单号 -->
    <LinearLayout
        android:layout_marginLeft="@dimen/DIMEN_23PX"
        android:layout_marginBottom="@dimen/DIMEN_23PX"
        android:layout_marginTop="@dimen/DIMEN_40PX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/ordernumber"
             android:textColor="@color/zi_er"
             android:textSize="16sp"/>
         <TextView 
             android:id="@+id/oder_num"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="16sp"
              android:layout_marginLeft="@dimen/DIMEN_12PX"
             android:textColor="@color/zi_er"
             android:text="2326"/>
         
    </LinearLayout>
    
    <!-- 订单日期 -->
    
    <LinearLayout
        android:layout_marginLeft="@dimen/DIMEN_23PX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/order_date"
             android:textColor="@color/zi_er"
             android:textSize="16sp"/>
         <TextView 
             android:id="@+id/found_data"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="16sp"
             android:layout_marginLeft="@dimen/DIMEN_12PX"
             android:textColor="@color/zi_er"
             android:text="2326"/>
         
    </LinearLayout>
    
       
    <!--金额-->
    <LinearLayout
        android:layout_margin="@dimen/DIMEN_23PX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
         <TextView 
             android:id="@+id/name"
             android:textColor="@color/zi_er"
            android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="123"
             android:textSize="16sp"/>
         <TextView 
             android:id="@+id/take_time"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:textStyle="bold"
             android:text="122"
              android:layout_marginLeft="@dimen/DIMEN_12PX"
             android:textColor="@color/zi_er"
            />
   
         
    </LinearLayout>
    
          <!--交易状态  -->
            
     <LinearLayout
         android:layout_marginLeft="@dimen/DIMEN_23PX"
         android:layout_marginRight="@dimen/DIMEN_23PX"
       android:layout_marginBottom="@dimen/DIMEN_10PX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/status"
             android:textColor="@color/zi_er"
             android:textSize="16sp"/>
         <TextView 
              android:layout_marginLeft="@dimen/DIMEN_12PX"
             android:id="@+id/tv_wait"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:textColor="@color/rose"
              android:textStyle="bold"
             />
    </LinearLayout>
    
    </LinearLayout>

</LinearLayout>
