<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    
    android:layout_height="match_parent" >
    <!-- gridview单个样式 -->
<com.android.volley.toolbox.NetworkImageView 
    android:layout_marginTop="@dimen/DIMEN_30PX"
    android:id="@+id/itme_image"
    android:layout_width="@dimen/DIMEN_113PX"
    android:layout_height="@dimen/DIMEN_103PX"
    android:layout_centerHorizontal="true"
    android:src="@drawable/jianxide"
    />
   <View 
       android:layout_marginTop="@dimen/DIMEN_16PX"
       android:id="@+id/views"
       android:layout_centerHorizontal="true"
       android:layout_below="@id/itme_image"
       android:layout_width="match_parent"
       android:layout_marginLeft="@dimen/DIMEN_50PX"
       android:layout_marginRight="@dimen/DIMEN_50PX"
       android:layout_height="@dimen/DIMEN_1PX"
       android:background="@color/line"/>

<TextView 
    android:layout_marginTop="@dimen/DIMEN_14PX"
    android:id="@+id/itme_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/views"
    android:textColor="@color/zi_yi"
    android:text="t衣"/>
<LinearLayout 
    android:layout_marginTop="@dimen/DIMEN_8PX"
    android:layout_marginBottom="@dimen/DIMEN_30PX"
    android:layout_below="@id/itme_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:layout_centerHorizontal="true"
    android:orientation="horizontal">
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/money"
        android:text="¥"/>
    <TextView 
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/money"
        android:text="12"/>
</LinearLayout>
</RelativeLayout>
